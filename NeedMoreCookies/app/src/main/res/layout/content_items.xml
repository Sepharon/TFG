<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="sersilinc.needmorecookies.Item"
    tools:showIn="@layout/app_bar_items">

    <ListView
        android:id="@+id/list_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/firstLayout_items">

    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/firstLayout_items">
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:scrollbars="none"
            android:layout_height="45dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <LinearLayout
                    android:id="@+id/firstLayout"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="45dp"
                    android:orientation="vertical"
                    android:background="@color/material_deep_teal_500"
                    android:visibility="visible">
                    <Button
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="All"
                        android:id="@+id/all"
                        android:background="@null"
                        android:textColor="#ffffff" />
                    <View android:id="@+id/separator_items"
                        android:background="#ffffff"
                        android:layout_width = "fill_parent"
                        android:layout_height="2dip"
                        android:visibility="invisible" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/thirdLayout"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="45dp"
                    android:orientation="vertical"
                    android:background="@color/material_deep_teal_500">

                    <Button
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Meat"
                        android:id="@+id/meat"
                        android:background="@null"
                        android:textColor="#ffffff" />
                    <View android:id="@+id/separator2_items"
                        android:background="#ffffff"
                        android:layout_width = "fill_parent"
                        android:layout_height="2dip"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/forthLayout"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="45dp"
                    android:orientation="vertical"
                    android:background="@color/material_deep_teal_500">

                    <Button
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Vegetables"
                        android:id="@+id/vegetables"
                        android:background="@null"
                        android:textColor="#ffffff" />
                    <View android:id="@+id/separator3_items"
                        android:background="#ffffff"
                        android:layout_width = "fill_parent"
                        android:layout_height="2dip"
                        android:visibility="invisible" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fifhtLayout"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="45dp"
                    android:orientation="vertical"
                    android:background="@color/material_deep_teal_500">

                    <Button
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Cereals"
                        android:id="@+id/cereals"
                        android:background="@null"
                        android:textColor="#ffffff" />
                    <View android:id="@+id/separator4_items"
                        android:background="#ffffff"
                        android:layout_width = "fill_parent"
                        android:layout_height="2dip"
                        android:visibility="invisible" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/sixthLayout"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="45dp"
                    android:orientation="vertical"
                    android:background="@color/material_deep_teal_500">

                    <Button
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Dairy"
                        android:id="@+id/dairy"
                        android:background="@null"
                        android:textColor="#ffffff" />
                    <View android:id="@+id/separator5_items"
                        android:background="#ffffff"
                        android:layout_width = "fill_parent"
                        android:layout_height="2dip"
                        android:visibility="invisible" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/sevenhtLayout"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="45dp"
                    android:orientation="vertical"
                    android:background="@color/material_deep_teal_500">

                    <Button
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Sweet"
                        android:id="@+id/sweet"
                        android:background="@null"
                        android:textColor="#ffffff" />
                    <View android:id="@+id/separator6_items"
                        android:background="#ffffff"
                        android:layout_width = "fill_parent"
                        android:layout_height="2dip"
                        android:visibility="invisible" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/eigthhtLayout"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="45dp"
                    android:orientation="vertical"
                    android:background="@color/material_deep_teal_500">

                    <Button
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Others"
                        android:id="@+id/others"
                        android:background="@null"
                        android:textColor="#ffffff" />
                    <View android:id="@+id/separator7_items"
                        android:background="#ffffff"
                        android:layout_width = "fill_parent"
                        android:layout_height="2dip"
                        android:visibility="invisible" />
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
</RelativeLayout>