<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="sersilinc.needmorecookies.Items"
    tools:showIn="@layout/app_bar_items">

    <ListView
        android:id="@+id/list_header"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/firstLayout_items">

    </ListView>
    <ListView
        android:id="@+id/list_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/list_header">

    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/firstLayout_items"
        android:background="#02BBD2">
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:scrollbars="none"
            android:layout_height="45dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <LinearLayout
                    android:id="@+id/firstLayout"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="45dp"
                    android:orientation="vertical"
                    android:background="@null"
                    android:visibility="visible"
                    android:layout_marginLeft="70dp">

                    <Button
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="@string/all_string"
                        android:id="@+id/all"
                        android:background="@null"
                        android:textColor="#ffffff"
                        android:textSize="18sp" />
                    <View android:id="@+id/separator_items"
                        android:background="#ffffff"
                        android:layout_width = "fill_parent"
                        android:layout_height="2dip"
                        android:visibility="invisible" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/thirdLayout"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="45dp"
                    android:orientation="vertical"
                    android:background="@null"
                    android:layout_marginLeft="70dp">

                    <Button
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="@string/meat_fish"
                        android:id="@+id/meat"
                        android:background="@null"
                        android:textColor="#ffffff"
                        android:textSize="18sp"
                        android:layout_marginRight="5dp"
                        android:capitalize="words" />
                    <View android:id="@+id/separator2_items"
                        android:background="#ffffff"
                        android:layout_width = "fill_parent"
                        android:layout_height="2dip"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/forthLayout"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="45dp"
                    android:orientation="vertical"
                    android:background="@null"
                    android:layout_marginLeft="70dp">

                    <Button
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="@string/vegetables"
                        android:id="@+id/vegetables"
                        android:textSize="18sp"
                        android:background="@null"
                        android:textColor="#ffffff"
                        android:capitalize="words" />
                    <View android:id="@+id/separator3_items"
                        android:background="#ffffff"
                        android:layout_width = "fill_parent"
                        android:layout_height="2dip"
                        android:visibility="invisible" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fifhtLayout"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="45dp"
                    android:orientation="vertical"
                    android:background="@null"
                    android:layout_marginLeft="70dp">

                    <Button
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="@string/cereal"
                        android:id="@+id/cereals"
                        android:background="@null"
                        android:textSize="18sp"
                        android:textColor="#ffffff" />
                    <View android:id="@+id/separator4_items"
                        android:background="#ffffff"
                        android:layout_width = "fill_parent"
                        android:layout_height="2dip"
                        android:visibility="invisible" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/sixthLayout"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="45dp"
                    android:orientation="vertical"
                    android:background="@null"
                    android:layout_marginLeft="70dp">

                    <Button
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="@string/dairy"
                        android:id="@+id/dairy"
                        android:textSize="18sp"
                        android:background="@null"
                        android:textColor="#ffffff" />
                    <View android:id="@+id/separator5_items"
                        android:background="#ffffff"
                        android:layout_width = "fill_parent"
                        android:layout_height="2dip"
                        android:visibility="invisible" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/sevenhtLayout"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="45dp"
                    android:orientation="vertical"
                    android:background="@null"
                    android:layout_marginLeft="70dp">

                    <Button
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="18sp"
                        android:text="@string/sweet"
                        android:id="@+id/sweet"
                        android:background="@null"
                        android:textColor="#ffffff" />
                    <View android:id="@+id/separator6_items"
                        android:background="#ffffff"
                        android:layout_width = "fill_parent"
                        android:layout_height="2dip"
                        android:visibility="invisible" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/eigthhtLayout"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="45dp"
                    android:orientation="vertical"
                    android:background="@null"
                    android:layout_marginLeft="70dp">

                    <Button
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="@string/others"
                        android:textSize="18sp"
                        android:id="@+id/others"
                        android:background="@null"
                        android:textColor="#ffffff" />
                    <View android:id="@+id/separator7_items"
                        android:background="#ffffff"
                        android:layout_width = "fill_parent"
                        android:layout_height="2dip"
                        android:visibility="invisible" />
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" >
    </ProgressBar>

</RelativeLayout>